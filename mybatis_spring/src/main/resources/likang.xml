    <configuration>
        <!--配置环境-->
        <environments default="postgres">
            <!--配置postgres环境-->
            <environment id="postgres">
                <!--配置事务类型-->
                <transactionManager  type="JDBC"></transactionManager>
                <!--配置数据源（连接池）-->
                <dataSource type="POOLED">
                    <!--配置连接数据库的四个基本信息-->
                    <property name="driver" value="org.postgresql.Driver"></property>
                    <property name="url" value="jdbc:postgresql://localhost:5432/postgres"></property>
                    <property name="username" value="postgres"></property>
                    <property name="password" value="123456"></property>
                </dataSource>
            </environment>
        </environments>
    <!--指定映射配置文件的位子
    如果使用注解方式则用class指定-->
    <mappers>
        <mapper resource="com/lk/dao/IUserDao.xml"></mapper>
        <!--<mapper class="com.likang.IDao.IUserDao"></mapper>-->
    </mappers>
</configuration>